<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.PopupOverlay">
        <!-- Define your popup theme here -->
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/lavender</item>
        <item name="colorAccent">@color/lavender_medium</item>
    </style>

    <!-- Custom Toolbar Style -->
    <style name="CustomToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="navigationIconTint">@color/lavender</item>
    </style>

</resources>